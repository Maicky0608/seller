{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "paths": {
      "@root/*": [
        "../*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@env/*": [
        "app/environments/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}